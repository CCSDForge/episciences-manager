{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "no-trailing-spaces": "error",
    "indent": ["error", 2],
    "comma-dangle": ["error", "always-multiline"]
  },
  "ignorePatterns": [
    "node_modules/",
    "public/build/",
    "vendor/"
  ]
}