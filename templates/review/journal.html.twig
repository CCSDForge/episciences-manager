{% extends 'base.html.twig' %}


{% block body %}

    <div class="container">
        {% if app.user and app.user.userIdentifier != '__NO_USER__' %}
            {% include 'partials/_navbar.html.twig' %}
        {% endif %}
        <div class="journal-list mb-5">
            <!-- Page Title -->
            <div class="d-flex">
                <div class="col-12">
                    <h1 class="page-title text-center my-5">Journal List</h1>
                </div>
            </div>
            <div class="d-flex">
                <div class="col-12">
                    <div class="stats-section glass p-4 rounded-4">
                        <div class="row g-4 align-items-center">

                            <div class="col-lg-2 col-md-3 col-sm-6">
                                <div class="stat-card p-4 rounded-3" style="background: linear-gradient(135deg, #ff6b6b 0%, #feca57 100%);">
                                    <div class="text-center text-white">
                                        {% if reviews.reviews is defined %}
                                        <h3 class="display-8 fw-bold mb-2">{{ reviews.pagination.totalItemCount|default('?') }}</h3>
                                        {% else %}
                                        <h3 class="display-8 fw-bold mb-2">{{ reviews|length|default('?') }}</h3>
                                        {% endif %}
                                        <p class="h5 mb-0">Total journals </p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-2 col-md-3 col-sm-6">
                                <div class="stat-card p-4 rounded-3" style="background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);">
                                    <div class="text-center text-white">
                                        {% if reviews.reviews is defined %}
                                            {% set activeCount = 0 %}
                                            {% for review in reviews.reviews %}
                                                {% if review.status == 1 %}
                                                    {% set activeCount = activeCount + 1 %}
                                                {% endif %}
                                            {% endfor %}
                                            <h3 class="display-8 fw-bold mb-2">{{ activeCount }}</h3>
                                        {% else %}
                                            <h3 class="display-8 fw-bold mb-2">{{ reviews|filter(r => r.status == 1)|length|default('?') }}</h3>
                                        {% endif %}
                                        <p class="h5 mb-0">Active journals</p>
                                    </div>
                                </div>
                            </div>

                            <!-- Search -->
                            <div class="col-lg-8 col-md-6">
                                <div class="search-container ms-auto" style="max-width: 400px;">
                                    <form method="GET" action="{{ path('app_journal') }}" class="search-form">
                                        <div class="search-wrapper">
                                            <input type="text"
                                                   name="search"
                                                   class="form-control form-control-lg"
                                                   placeholder="Search journal by name or code"
                                                   value="{{ app.request.query.get('search') }}"
                                                   autocomplete="off">
                                            <button class="search-btn" type="submit">
                                                <i class="fas fa-search"></i>
                                            </button>
                                            {% if app.request.query.get('page') %}
                                                <input type="hidden" name="page" value="{{ app.request.query.get('page') }}">
                                            {% endif %}
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Table Section -->
            <div class="row">
                <div class="col-12">
                    <div class="journal-table glass p-4 rounded-4">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Code</th>
                                    <th scope="col" class="text-center">Manager</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% if reviews.reviews is defined %}
                                {% for review in reviews.reviews %}
                                    <tr>
                                        <td>
                                            <div class="fw-semibold">{{ review.name }}</div>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">{{ review.code }}</span>
                                        </td>
                                        <td class="text-center">
                                            {# View details button - only for epiadmin #}
                                            {% if is_granted('REVIEW_VIEW', review) %}
                                                <a href="{{ path('app_journal_detail', {code: review.code}) }}"
                                                   class="action-btn"
                                                   title="See Details (epiadmin uniquement)">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            {% else %}
                                                {# Grayed-out icon for users without access #}
                                                <span class="action-btn disabled" title="Accès restreint aux epiadmin">
                                                    <i class="fas fa-eye-slash text-muted"></i>
                                                </span>
                                            {% endif %}

                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="3" class="text-center text-muted py-4">
                                            <i class="fas fa-inbox fa-2x mb-3"></i>
                                            <p class="mb-0">Aucun journal trouvé</p>
                                        </td>
                                    </tr>
                                {% endfor %}
                                {% else %}
                                    {# Cas où la méthode retourne directement un objet pagination #}
                                    {% for review in reviews %}
                                        <tr>
                                            <td>
                                                <div class="fw-semibold">{{ review.name }}</div>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">{{ review.code }}</span>
                                            </td>
                                            <td class="text-center">
                                                {% if is_granted('REVIEW_VIEW', review) %}
                                                    <a href="{{ path('app_journal_detail', {code: review.code}) }}"
                                                       class="action-btn btn-view"
                                                       title="See Details (epiadmin uniquement)">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                {% else %}
                                                    <span class="action-btn btn-view disabled"
                                                          title="Accès restreint aux epiadmin">
                                                            <i class="fas fa-eye-slash text-muted"></i>
                                                        </span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="3" class="text-center text-muted py-4">
                                                <i class="fas fa-inbox fa-2x mb-3"></i>
                                                <p class="mb-0">Aucun journal trouvé</p>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="pagination-wrapper">
                <div class="d-flex justify-content-center">
                    {{ knp_pagination_render(reviews.pagination) }}
                </div>

                {% if reviews.pagination is defined and reviews.pagination.totalItemCount > 0 %}
                    <div class="pagination-info">
                        <small>
                            Page {{ reviews.pagination.currentPageNumber }} sur {{ reviews.pagination.pageCount }}
                            ({{ reviews.pagination.totalItemCount }} journaux au total)
                        </small>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('journal') }}
    {{ encore_entry_link_tags('navbar') }}
{% endblock %}
