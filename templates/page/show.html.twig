{% extends 'base.html.twig' %}

{% block title %}Pages - {{ code }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Pages de la revue {{ code }}</h1>
            
            {% if pages is empty %}
                <p>Aucune page trouv√©e pour cette revue.</p>
            {% else %}
                <div class="row">
                    {% for page in pages %}
                        <div class="col-md-6 mb-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">{{ page.title[app.request.locale] ?? page.title['en'] ?? page.pageCode }}</h5>
                                    <p class="card-text">
                                        <small class="text-muted">Code: {{ page.pageCode }}</small>
                                    </p>
                                    <div class="page-content">
                                        {{ (page.content[app.request.locale] ?? page.content['en'] ?? 'Pas de contenu disponible')|raw|slice(0, 200) }}
                                        {% if (page.content[app.request.locale] ?? page.content['en'])|length > 200 %}...{% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}