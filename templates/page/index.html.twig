{% block body %}

    <style>
        .header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
        }

        .header-preheader {
            background-color: #ffffff;
            padding: 0.5rem 0;
            border-bottom: 1px solid #e9ecef;
        }

        .logo-img {
            max-height: 40px;
        }

        .journal-logo {
            max-height: 80px;
        }

        .custom-btn {
            border-radius: 20px;
            padding: 0.375rem 1rem;
        }

        .welcome-text {
            font-size: 0.9rem;
            color: #6c757d;
        }
    </style>

    <header class="header">
        <!-- Pre-header with logo and login -->
        <div class="header-preheader">
            <div class="container-fluid">
                <div class="d-flex justify-content-between align-items-center">
                    <!-- Episciences Logo -->
                    <div class="header-preheader-logo">
                        <img src="{{ asset('images/episciences.svg') }}" alt="Episciences Logo" class="img-fluid logo-img">
                    </div>

                    <div class="login-btn-container" >
                        {% if app.user and app.user.userIdentifier != '__NO_USER__' %}
                            <div class="user-menu d-flex align-items-center">
                            <span class="welcome-text me-3">
                                Welcome, <strong>{{ app.user.userIdentifier }}</strong>
                            </span>
                                <a class="btn btn-outline-danger custom-btn" href="{{ path('logout') }}" role="button">
                                    <i class="fas fa-sign-out-alt me-1"></i>
                                    Logout
                                </a>
                            </div>
                        {% else %}
                            <a class="btn btn-outline-primary custom-btn" href="{{ path('login') }}" role="button">
                                Login
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Journal header -->
        <div class="header-journal py-3">
            <div class="container-fluid">
                <div class="d-flex align-items-center">
                    <!-- Journal Logo -->
                    <div class="header-journal-logo me-4">
                        <a href="#" class="text-decoration-none">
                            {{ review.logo }}
                        </a>
                    </div>

                    <!-- Journal Title -->
                    <div class="header-journal-title">
                        <h1 class="h3 mb-0 text-primary fw-bold">{{ review.name }}</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Demo toggle button -->
    <div class="container mt-4">
        <button class="btn btn-secondary" onclick="toggleLoginState()">
            Toggle Login State (Demo)
        </button>
    </div>

{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('accueil') }}
{% endblock %}