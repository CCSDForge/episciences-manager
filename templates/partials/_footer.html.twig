
<footer class="footer">
    <div class="footer-columns">
        <div class="footer-column">
            <h3>{{ 'footer.about_title'|trans }}</h3>
            <ul>
                <li><a href="#">{{ 'footer.blog'|trans }}</a></li>
                <li><a href="#">{{ 'footer.contact'|trans }}</a></li>
            </ul>
        </div>

        <div class="footer-column">
            <h3>{{ 'footer.contact'|trans }}</h3>
            <ul>
                <li><i class="fas fa-book"></i> <a href="#">{{ 'footer.documentation'|trans }}</a></li>
                <li><i class="fas fa-balance-scale"></i> <a href="#">{{ 'footer.legal_mentions'|trans }}</a></li>
                <li><i class="fas fa-user-shield"></i> <a href="#">{{ 'footer.privacy'|trans }}</a></li>
                <li><i class="fas fa-comment-dots"></i> <a href="#">{{ 'footer.user_feedback'|trans }}</a></li>
                <li><i class="fas fa-file-contract"></i> <a href="#">{{ 'footer.terms_conditions'|trans }}</a></li>
            </ul>
        </div>

        <div class="footer-column">
            <h3>Code/Dev</h3>
            <ul>
                <li><i class="fas fa-code-branch"></i> <a href="#">{{ 'footer.code_dev_title'|trans }}</a></li>
                <li><i class="fas fa-sitemap"></i> <a href="#">{{ 'footer.privacy'|trans }}OAI-PMH</a></li>
                <li><i class="fas fa-map"></i> <a href="#">{{ 'footer.roadmap'|trans }}</a></li>
            </ul>
        </div>
    </div>

    <div class="footer-credit">
        <p>
            <img src="https://upload.wikimedia.org/wikipedia/commons/b/b7/Flag_of_Europe.svg" alt="EU Flag" width="20">
            {{ 'footer.support_text'|trans }}
            <a href="https://www.openaire.eu">{{ 'footer.open_aire'|trans }}</a> {{ 'footer.services_text'|trans }}
            <a href="https://cordis.europa.eu/project/id/101017452">{{ 'footer.grant_text'|trans }}</a>
            "{{ 'footer.nexus_description'|trans }}".
        </p>
    </div>
</footer>
{% block stylesheets %}
    {{ encore_entry_link_tags('footer') }}
{% endblock %}